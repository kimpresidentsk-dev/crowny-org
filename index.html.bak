    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/ko_KR/sdk.js"></script>
    <!-- ===== BOTTOM TAB BAR (Mobile) ===== -->
    <nav class="bottom-tab-bar" id="bottom-tab-bar">
        <div class="bottom-tab-bar-inner">
            <button class="bottom-tab-item" onclick="showPage('dashboard')" data-page="dashboard">
                <span class="tab-icon"><i data-lucide="home" style="width:20px;height:20px;"></i></span>
                <span>홈</span>
            </button>
            <button class="bottom-tab-item" onclick="showPage('social')" data-page="social">
                <span class="tab-icon"><i data-lucide="camera" style="width:20px;height:20px;"></i></span>
                <span>소셜</span>
            </button>
            <button class="bottom-tab-item create-btn" onclick="showCreatePostModal()" data-page="create">
                <span class="tab-icon"><i data-lucide="plus" style="width:20px;height:20px;"></i></span>
                <span></span>
            </button>
            <button class="bottom-tab-item" onclick="showPage('wallet')" data-page="wallet">
                <span class="tab-icon"><i data-lucide="wallet" style="width:20px;height:20px;"></i></span>
                <span>지갑</span>
            </button>
            <button class="bottom-tab-item" onclick="showPage('messenger')" data-page="messenger">
                <span class="tab-icon"><i data-lucide="message-circle" style="width:20px;height:20px;"></i></span>
                <span>채팅</span>
            </button>
        </div>
    </nav>
    <script>
    function updateBottomTab(pageId) {
        document.querySelectorAll('.bottom-tab-item').forEach(b => b.classList.remove('active'));
        const active = document.querySelector(`.bottom-tab-item[data-page="${pageId}"]`);
        if (active) active.classList.add('active');
    }
    function showCreatePostModal() {
        const overlay = document.createElement('div');
        overlay.className = 'bottom-sheet-overlay';
        overlay.onclick = () => { overlay.remove(); sheet.remove(); };
        const sheet = document.createElement('div');
        sheet.className = 'bottom-sheet active';
        sheet.innerHTML = `
            <div class="bottom-sheet-handle"></div>
            <div style="padding:12px 0;">
                <div style="padding:12px 16px;font-weight:700;font-size:1rem;color:var(--text,#3D2B1F);">➕ 새로 만들기</div>
                <button onclick="this.closest('.bottom-sheet').previousElementSibling.remove();this.closest('.bottom-sheet').remove();showPage('social');setTimeout(()=>{const t=document.getElementById('post-text');if(t){t.focus();t.scrollIntoView({behavior:'smooth',block:'center'})}},300);" style="width:100%;padding:14px 16px;border:none;background:none;color:var(--text,#3D2B1F);font-size:0.95rem;cursor:pointer;text-align:left;">📸 소셜 게시물</button>
                <button onclick="this.closest('.bottom-sheet').previousElementSibling.remove();this.closest('.bottom-sheet').remove();showPage('reels');setTimeout(()=>{if(typeof SHORTFORM!=='undefined'&&SHORTFORM.openUpload)SHORTFORM.openUpload()},300);" style="width:100%;padding:14px 16px;border:none;background:none;color:var(--text,#3D2B1F);font-size:0.95rem;cursor:pointer;text-align:left;">🎬 숏폼 영상</button>
                <button onclick="this.closest('.bottom-sheet').previousElementSibling.remove();this.closest('.bottom-sheet').remove();showPage('social');setTimeout(()=>{if(typeof openStoryUpload==='function')openStoryUpload()},300);" style="width:100%;padding:14px 16px;border:none;background:none;color:var(--text,#3D2B1F);font-size:0.95rem;cursor:pointer;text-align:left;">📖 스토리</button>
                <button onclick="this.closest('.bottom-sheet').previousElementSibling.remove();this.closest('.bottom-sheet').remove();" style="width:100%;padding:14px 16px;border:none;background:none;color:#6B5744;font-size:0.95rem;cursor:pointer;text-align:left;">취소</button>
            </div>`;
        document.body.appendChild(overlay);
        document.body.appendChild(sheet);
    }
    function _oldShowCreatePostModal() {
        showPage('social');
        if (typeof setSocialFilter === 'function') setSocialFilter('all');
        setTimeout(() => {
            const ta = document.getElementById('post-text');
            if (ta) { ta.focus(); ta.scrollIntoView({ behavior:'smooth', block:'center' }); }
        }, 200);
    }
    </script>
