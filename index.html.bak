            <script>
                document.getElementById('post-image').addEventListener('change', function() {
                    const count = this.files.length;
                    document.getElementById('post-image-name').textContent = count > 1 ? `${count}장 선택됨` : (this.files[0] ? this.files[0].name : '');
                    // Clear video if image selected
                    if (this.files.length > 0) {
                        document.getElementById('post-video').value = '';
                        document.getElementById('post-video-preview').style.display = 'none';
                    }
                });
                document.getElementById('post-video').addEventListener('change', function() {
                    const file = this.files[0];
                    const preview = document.getElementById('post-video-preview');
                    if (!file) { preview.style.display = 'none'; return; }
                    // Validate size (50MB)
                    if (file.size > 50 * 1024 * 1024) {
                        showToast('영상은 50MB 이하만 가능합니다', 'warning');
                        this.value = '';
                        preview.style.display = 'none';
                        return;
                    }
                    // Clear image if video selected
                    document.getElementById('post-image').value = '';
                    document.getElementById('post-image-name').textContent = '';
                    // Show preview & open editor
                    const url = URL.createObjectURL(file);
                    preview.style.display = 'block';
                    preview.innerHTML = `<div style="position:relative;display:inline-block;"><video src="${url}" style="max-width:200px;max-height:150px;border-radius:8px;" muted></video><button onclick="document.getElementById('post-video').value='';document.getElementById('post-video-preview').style.display='none';" style="position:absolute;top:4px;right:4px;background:rgba(61,43,31,0.6);color:#FFF8F0;border:none;border-radius:50%;width:24px;height:24px;cursor:pointer;font-size:14px;">✕</button><button onclick="openVideoEditor()" style="position:absolute;bottom:4px;right:4px;background:rgba(61,43,31,0.6);color:#FFF8F0;border:none;border-radius:12px;padding:2px 8px;cursor:pointer;font-size:12px;">✂️ 편집</button></div>`;
                    // Validate duration
                    const v = preview.querySelector('video');
                    v.onloadedmetadata = () => {
                        if (v.duration > 60) {
                            showToast('영상은 60초 이하만 가능합니다', 'warning');
                            document.getElementById('post-video').value = '';
                            preview.style.display = 'none';
                        }
                    };
                });
